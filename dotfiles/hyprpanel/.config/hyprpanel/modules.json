{
  "custom/capslock": {
    "icon": "󰘲",
    "label": "{state}",
    "truncationSize": -1,
    "tooltip": "Caps Lock is {state}",
    "executeOnAction": "",
    "execute": "~/.config/hyprpanel/scripts/capslock.sh",
    "interval": 200,
    "hideOnEmpty": true
  },
  "custom/kblayout": {
    "icon": "󰌏",
    "label": "{state}",
    "interval": 100,
    "executeOnAction": "",
    "tooltip": "Keyboard Language: {state}",
    "execute": "~/.config/hyprpanel/scripts/kblayout.sh",
    "actions": {
      "onLeftClick": "hyprctl switchxkblayout gsr-ui-virtual-keyboard next",
      "onRightClick": "hyprctl switchxkblayout gsr-ui-virtual-keyboard prev",
      "onMiddleClick": "",
      "onScrollUp": "hyprctl switchxkblayout gsr-ui-virtual-keyboard next",
      "onScrollDown": "hyprctl switchxkblayout gsr-ui-virtual-keyboard prev"
    }
  }
}
